@model List<ZamaTronicts.Models.CartPO>

@{
    ViewBag.Title = "ViewTransactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Home", "ViewProducts", "Product", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</div>
<h2>View Your ZamaTronict Transactions</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayFor(model => model[1].supplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].supplierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].productDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].productPrice)
        </th>
        <th>
            @Html.HiddenFor(model => model[0].checkOutID)
        </th>
        <th>
            @Html.HiddenFor(model => model[0].userTransactionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].datePurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].checkOutQuantity)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model[0].checkOutShipping)
        </th>

        <th>
            @Html.HiddenFor(model => model[0].userTableID)
        </th>
        <th>
            @Html.HiddenFor(model => model[0].productID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.supplierID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.supplierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productPrice)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.checkOutID)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.userTransactionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datePurchase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.checkOutQuantity)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.checkOutShipping)
        </td>
       
        <td>
            @Html.HiddenFor(modelItem => item.userTableID)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.productID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
       
    </tr>
}

</table>
